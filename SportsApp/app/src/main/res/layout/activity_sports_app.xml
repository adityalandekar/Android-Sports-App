<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SportsAppActivity"
    android:backgroundTintMode="screen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET DATA"
        android:id="@+id/button"
        android:layout_marginBottom="64dp"
        android:clickable="true"
        android:onClick="onButtonClick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#c0cc1227"
        android:background="#f51f1f1f"
        android:textStyle="bold"
        android:textSize="16dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sportSpinner"
        android:spinnerMode="dropdown"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:clickable="false"
        android:gravity="center"
        android:textAlignment="center"
        style="@style/Widget.AppCompat.Light.DropDownItem.Spinner" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/team1Spinner"
        android:spinnerMode="dropdown"
        android:layout_above="@+id/team2Spinner"
        android:layout_marginBottom="41dp"
        android:layout_alignLeft="@+id/sportSpinner"
        android:layout_alignStart="@+id/sportSpinner"
        android:gravity="center"
        android:textAlignment="center"
        style="@style/Widget.AppCompat.Light.DropDownItem.Spinner" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/team2Spinner"
        android:spinnerMode="dropdown"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/team1Spinner"
        android:gravity="center"
        android:layout_alignStart="@+id/team1Spinner"
        android:textAlignment="center"
        style="@style/Widget.AppCompat.Light.DropDownItem.Spinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT SPORT"
        android:id="@+id/textView6"
        android:layout_toLeftOf="@+id/sportSpinner"
        android:layout_alignBottom="@+id/sportSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_alignTop="@+id/sportSpinner"
        android:textColor="#ff2f5eff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT TEAM 1"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/team1Spinner"
        android:layout_toLeftOf="@+id/team1Spinner"
        android:layout_alignTop="@+id/team1Spinner"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:textColor="#FF2F5EFF"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT TEAM 2"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/team2Spinner"
        android:layout_toLeftOf="@+id/team2Spinner"
        android:layout_alignTop="@+id/team2Spinner"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:textColor="#FF2F5EFF"
        android:textStyle="bold" />
</RelativeLayout>
